import java.util.Scanner;
import java.util.Arrays;
import java.util.Random;

public class assignment2 {

    public static void printMenu () {

        System.out.println("Please choose one: \n
        \t1. find the minimum of the array\n
        \t2. find the maximum of the array\n
        \t3. find the average of the array\n
        \t4. find the sum of the elements with the odd indexes\n
        \t5. find the sum of the elements with the even indexes\n
