    public static double findAverage(int[] nums){
        int length = nums.length;
        if(length == 0){
            return 0;//If there are no elements the average is 0.
        }
        int sum = 0;
        double average=0;
        for(int i = 0; i < length; i++){
            sum += nums[i];
        }
        average=sum * 1.0 /length;
        return average;
    }

    public static double[] findDifferencesFromAverage(int[] nums, double average){
        int length=nums.length;
        double[] empty=new double[0];
        if(length == 0){
            return empty ;// If there are no elements, then it will return an empty array.
        }
        double[] differences=new double[length];
        double difference = 0;
        for(int i=0;i < length; i++){
            difference=nums[i] - average;// It calculates the difference between each element and the average.
            differences[i] = difference;
        }
        return differences;
    }

    public static int findMinOftheArray(int nums[],int lowerBound,int upperBound){
        int length=nums.length;
        if(length == 0){
            return lowerBound - 1; //If there are no elemnets, I will return lowerBound-1.
        }
        int min=nums[0];
        for(int i= 1 ; i <  length; i++){
            if(nums[i] < min){
                min = nums[i];
            }
        }
        return min;
    }

    public static int findMaxOftheArray(int nums[],int lowerBound,int upperBound){
        int length = nums.length;
        if(length == 0){
            return upperBound + 1; //If there are no elements, I will return upperBound+1.
        }
        int max = nums[0];
        for(int i = 1; i< length; i++){
            if(nums[i]>max){
                max = nums[i];
            }
        }
        return max;
    }

    public static void printArray(double[] nums){// This method prints out the given array.
        int length=nums.length;
        System.out.print("{");
        for(int i = 0;i < length; i++){
            System.out.print(nums[i] + ", ");
        }
        System.out.print("}");
        if(length == 0){
            return;
        }
    }
